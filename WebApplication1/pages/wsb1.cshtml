@page
@model WebApplication1.pages.wsb1Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>wsb1</title>
</head>
<body>
    <form method="post">
        <label>Number 1:</label>
        <input type="number" name="number1" value=@Model.Number1>
        <br />
        <label>Number 2:</label>
        <input type="number" name="number2" value=@Model.Number2>
        <br />
        <input type="radio" name="math" value="Add" checked/>Add<br />
        <input type="radio" name="math" value="Subtract" />Subtract<br />
        <input type="radio" name="math" value="Multiply" />Multiply<br />
        <input type="radio" name="math" value="Divide" />Divide<br />
        <button type="submit">Submit</button>
    </form>

    <h1>@Model.Message</h1>
</body>
</html>
