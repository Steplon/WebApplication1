@page
@model WebApplication1.pages.timeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>time</title>
</head>
<body>


    <form method="post">
        <fieldset>
            <legend>Select all days you work</legend>

            @for (int i = 0; i < Model.Days.Length; i++)
            {
                <input type="checkbox" asp-for=DaysChoice[i] />
                <label asp-for=DaysChoice[i]>@Model.Days[i]</label>
            }
            <br />
            <select asp-for=ChoosenMonths asp-items=Model.Months ></select>
            <br />
            <button type="submit">Submit</button>

        </fieldset>
    </form>

    @if (Model.HttpContext.Request.Method == "POST")
    {
        @if (Model.ChoosenMonths.Count == 0)
        {
            <h3>You picked no months</h3>
        }
        else
        {
            <h3>You picked:</h3>
            <ul>

                @foreach (string month in Model.ChoosenMonths)
                {
                    <li>@month</li>
                }


            </ul>
        }
    }




</body>
</html>
